<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendor Auctions - Bridgo</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            overflow: hidden;
        }
        
        .header {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }
        
        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }
        
        .header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }
        
        .content {
            padding: 40px;
        }
        
        .back-btn {
            background: #6c757d;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 20px;
            transition: background 0.2s;
        }
        
        .back-btn:hover {
            background: #5a6268;
        }
        
        .info-box {
            background: #f8f9fa;
            border-left: 4px solid #28a745;
            padding: 20px;
            margin-bottom: 30px;
            border-radius: 8px;
        }
        
        .info-box h3 {
            color: #28a745;
            margin-bottom: 10px;
        }
        
        .info-box p {
            color: #6c757d;
            line-height: 1.6;
        }
        
        .supplier-info {
            background: #e8f5e8;
            border-left: 4px solid #28a745;
            padding: 15px;
            margin-bottom: 25px;
            border-radius: 8px;
        }
        
        .supplier-info h4 {
            color: #28a745;
            margin-bottom: 8px;
        }
        
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #6c757d;
        }
        
        .empty-state h3 {
            font-size: 1.5rem;
            margin-bottom: 15px;
            color: #495057;
        }
        
        .empty-state p {
            font-size: 1.1rem;
            margin-bottom: 25px;
        }
        
        .auction-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
            margin-top: 30px;
        }
        
        .auction-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            overflow: hidden;
            transition: transform 0.2s;
            border: 2px solid #f8f9fa;
        }
        
        .auction-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        
        .auction-header {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            color: white;
            padding: 20px;
            text-align: center;
        }
        
        .auction-header h3 {
            font-size: 1.3rem;
            margin-bottom: 5px;
        }
        
        .auction-status {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            margin-top: 8px;
            background: #dc3545;
            color: white;
        }
        
        .auction-body {
            padding: 20px;
        }
        
        .auction-details {
            margin-bottom: 20px;
        }
        
        .detail-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
            padding: 8px 0;
            border-bottom: 1px solid #f1f3f4;
        }
        
        .detail-row:last-child {
            border-bottom: none;
        }
        
        .detail-label {
            font-weight: 600;
            color: #495057;
        }
        
        .detail-value {
            color: #6c757d;
        }
        
        .vendor-info {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 15px;
        }
        
        .vendor-info h4 {
            color: #007bff;
            margin-bottom: 10px;
        }
        
        .vendor-details {
            font-size: 0.9rem;
            color: #6c757d;
        }
        
        .bid-info {
            background: #e8f5e8;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 15px;
        }
        
        .bid-info h4 {
            color: #28a745;
            margin-bottom: 10px;
        }
        
        .current-bid {
            font-size: 1.2rem;
            font-weight: 600;
            color: #28a745;
        }
        
        .auction-actions {
            display: flex;
            gap: 10px;
        }
        
        .action-btn {
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.2s;
            flex: 1;
            text-align: center;
        }
        
        .btn-view {
            background: #007bff;
            color: white;
        }
        
        .btn-view:hover {
            background: #0056b3;
        }
        
        .btn-disabled {
            background: #6c757d;
            color: white;
            cursor: not-allowed;
        }
        
        .timer {
            background: #fff3cd;
            border-left: 4px solid #ffc107;
            padding: 10px;
            border-radius: 6px;
            margin-bottom: 15px;
            text-align: center;
        }
        
        .timer span {
            font-weight: 600;
            color: #856404;
        }
        
        .success-message {
            background: #d4edda;
            color: #155724;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #28a745;
        }
        
        .error-message {
            background: #f8d7da;
            color: #721c24;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #dc3545;
        }
        
        @media (max-width: 768px) {
            .auction-grid {
                grid-template-columns: 1fr;
            }
            
            .header h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üè¢ Vendor Auctions</h1>
            <p>Browse vendor requirements and bid with the lowest amount to win</p>
        </div>
        
        <div class="content">
            <a href="/supplier" class="back-btn">‚Üê Back to Dashboard</a>
            
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="success-message">
                    ‚úÖ Bid placed successfully!
                </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>
            
            <div class="info-box">
                <h3>üìã How Vendor Auctions Work</h3>
                <p>
                    ‚Ä¢ <strong>Vendors list their requirements</strong> with item name, quantity, and maximum price<br>
                    ‚Ä¢ <strong>You bid with lower amounts</strong> to win their business<br>
                    ‚Ä¢ <strong>Lowest bid wins</strong> - you get the contract<br>
                    ‚Ä¢ <strong>Real-time updates</strong> show all bids as they come in
                </p>
            </div>
            
            <div class="supplier-info">
                <h4>üë§ Supplier Information</h4>
                <p><strong>Name:</strong> <%= supplier.name %></p>
                <p><strong>City:</strong> <%= supplier.city %>, <strong>Area:</strong> <%= supplier.area %></p>
                <p><strong>Contact:</strong> <%= supplier.phone %></p>
            </div>
            
            <% if (auctions.length === 0) { %>
                <div class="empty-state">
                    <h3>üìã No Live Vendor Auctions</h3>
                    <p>There are currently no live vendor auctions available. Check back later for new opportunities to bid on vendor requirements.</p>
                </div>
            <% } else { %>
                <div class="auction-grid">
                    <% auctions.forEach(function(auction) { %>
                        <div class="auction-card">
                            <div class="auction-header">
                                <h3><%= auction.itemName %></h3>
                                <div class="auction-status">üî¥ LIVE</div>
                            </div>
                            
                            <div class="auction-body">
                                <div class="auction-details">
                                    <div class="detail-row">
                                        <span class="detail-label">Quantity:</span>
                                        <span class="detail-value"><%= auction.quantity %></span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Max Price:</span>
                                        <span class="detail-value">‚Çπ<%= auction.basePrice %></span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">End Time:</span>
                                        <span class="detail-value"><%= new Date(auction.auctionEnd).toLocaleString() %></span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Total Bids:</span>
                                        <span class="detail-value"><%= auction.bidders ? auction.bidders.length : 0 %></span>
                                    </div>
                                </div>
                                
                                <div class="vendor-info">
                                    <h4>üë§ Vendor Details</h4>
                                    <div class="vendor-details">
                                        <strong>Name:</strong> <%= auction.vendorName %><br>
                                        <strong>City:</strong> <%= auction.vendorCity %>, <strong>Area:</strong> <%= auction.vendorArea %><br>
                                        <strong>Phone:</strong> <%= auction.vendorPhone %><br>
                                        <strong>Email:</strong> <%= auction.vendorEmail %>
                                    </div>
                                </div>
                                
                                <div class="bid-info">
                                    <h4>üí∞ Current Lowest Bid</h4>
                                    <% if (auction.currentLowestBid) { %>
                                        <div class="current-bid">‚Çπ<%= auction.currentLowestBid %></div>
                                        <small>by <%= auction.currentLowestBidder %></small>
                                    <% } else { %>
                                        <div class="current-bid">‚Çπ<%= auction.basePrice %></div>
                                        <small>No bids yet - be the first!</small>
                                    <% } %>
                                </div>
                                
                                <div class="timer" id="timer-<%= auction._id %>">
                                    Time Remaining: <span id="time-<%= auction._id %>">Loading...</span>
                                </div>
                                
                                <div class="auction-actions">
                                    <a href="/supplier/vendor-auction/<%= auction._id %>" class="action-btn btn-view">üëÅÔ∏è View & Bid</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>
    
    <script>
        // Update timers for all auctions
        function updateTimers() {
            <% auctions.forEach(function(auction) { %>
                const auctionId = '<%= auction._id %>';
                const endTime = new Date('<%= auction.auctionEnd %>');
                const now = new Date();
                const timeLeft = endTime - now;
                
                const timeElement = document.getElementById('time-' + auctionId);
                if (timeElement) {
                    if (timeLeft <= 0) {
                        timeElement.textContent = 'Auction Ended';
                        // Disable the view button
                        const viewBtn = document.querySelector(`a[href="/supplier/vendor-auction/${auctionId}"]`);
                        if (viewBtn) {
                            viewBtn.className = 'action-btn btn-disabled';
                            viewBtn.textContent = '‚è∞ Ended';
                            viewBtn.style.pointerEvents = 'none';
                        }
                    } else {
                        const hours = Math.floor(timeLeft / (1000 * 60 * 60));
                        const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
                        const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);
                        
                        timeElement.textContent = 
                            `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                    }
                }
            <% }); %>
        }
        
        // Update timers every second
        setInterval(updateTimers, 1000);
        updateTimers();
    </script>
</body>
</html> 