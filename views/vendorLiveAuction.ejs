<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Vendor Auction - Bridgo</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            overflow: hidden;
        }
        
        .header {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }
        
        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }
        
        .header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }
        
        .content {
            padding: 40px;
        }
        
        .back-btn {
            background: #6c757d;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 20px;
            transition: background 0.2s;
        }
        
        .back-btn:hover {
            background: #5a6268;
        }
        
        .auction-info {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 30px;
            border-left: 4px solid #007bff;
        }
        
        .auction-info h2 {
            color: #007bff;
            margin-bottom: 15px;
            font-size: 1.8rem;
        }
        
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }
        
        .info-item {
            background: white;
            padding: 15px;
            border-radius: 8px;
            border: 1px solid #e9ecef;
        }
        
        .info-item h4 {
            color: #495057;
            margin-bottom: 8px;
            font-size: 1rem;
        }
        
        .info-item p {
            color: #6c757d;
            font-size: 1.1rem;
            font-weight: 600;
        }
        
        .timer {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 20px;
            border-radius: 12px;
            text-align: center;
            margin-bottom: 30px;
        }
        
        .timer h3 {
            margin-bottom: 10px;
            font-size: 1.3rem;
        }
        
        .timer #time-remaining {
            font-size: 2rem;
            font-weight: 600;
        }
        
        .bidding-section {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }
        
        .current-bid {
            background: #e8f5e8;
            border-radius: 12px;
            padding: 25px;
            border-left: 4px solid #28a745;
        }
        
        .current-bid h3 {
            color: #28a745;
            margin-bottom: 15px;
        }
        
        .bid-amount {
            font-size: 2.5rem;
            font-weight: 700;
            color: #28a745;
            margin-bottom: 10px;
        }
        
        .bidder-info {
            background: white;
            padding: 15px;
            border-radius: 8px;
            margin-top: 15px;
        }
        
        .bidders-list {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 25px;
            border-left: 4px solid #6c757d;
        }
        
        .bidders-list h3 {
            color: #495057;
            margin-bottom: 20px;
        }
        
        .bidder-item {
            background: white;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 10px;
            border-left: 4px solid #007bff;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .bidder-details {
            flex: 1;
        }
        
        .bidder-name {
            font-weight: 600;
            color: #495057;
            margin-bottom: 5px;
        }
        
        .bidder-contact {
            font-size: 0.9rem;
            color: #6c757d;
        }
        
        .bid-amount-display {
            text-align: right;
        }
        
        .bid-amount-value {
            font-size: 1.2rem;
            font-weight: 600;
            color: #28a745;
        }
        
        .bid-time {
            font-size: 0.8rem;
            color: #6c757d;
        }
        
        .no-bids {
            text-align: center;
            color: #6c757d;
            font-style: italic;
            padding: 20px;
        }
        
        .winner-section {
            background: linear-gradient(135deg, #ffc107 0%, #ff8c00 100%);
            color: white;
            border-radius: 12px;
            padding: 25px;
            margin-top: 30px;
            text-align: center;
        }
        
        .winner-section h3 {
            margin-bottom: 15px;
            font-size: 1.5rem;
        }
        
        .winner-details {
            background: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 8px;
            margin-top: 15px;
        }
        
        .winner-contact-buttons {
            display: flex;
            gap: 10px;
            justify-content: center;
            margin-top: 15px;
        }
        
        .contact-btn {
            padding: 8px 16px;
            border: none;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
        }
        
        .btn-call {
            background: #28a745;
            color: white;
        }
        
        .btn-email {
            background: #007bff;
            color: white;
        }
        
        .btn-whatsapp {
            background: #25d366;
            color: white;
        }
        
        .error-message {
            background: #f8d7da;
            color: #721c24;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #dc3545;
        }
        
        .success-message {
            background: #d4edda;
            color: #155724;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #28a745;
        }
        
        @media (max-width: 768px) {
            .bidding-section {
                grid-template-columns: 1fr;
            }
            
            .info-grid {
                grid-template-columns: 1fr;
            }
            
            .header h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üè¢ Live Vendor Auction</h1>
            <p>Track supplier bids in real-time</p>
        </div>
        
        <div class="content">
            <a href="/vendor" class="back-btn" style="background:#2e86de;margin-bottom:10px;">‚Üê Back to Dashboard</a>
            <a href="/vendor/my-auctions" class="back-btn">‚Üê Back to My Auctions</a>
            
            <div class="error-message" id="error-message" style="display: none;"></div>
            <div class="success-message" id="success-message" style="display: none;"></div>
            
            <div class="auction-info">
                <h2><%= auction.itemName %></h2>
                <div class="info-grid">
                    <div class="info-item">
                        <h4>üì¶ Quantity Required</h4>
                        <p><%= auction.quantity %></p>
                    </div>
                    <div class="info-item">
                        <h4>üí∞ Maximum Price</h4>
                        <p>‚Çπ<%= auction.basePrice %></p>
                    </div>
                    <div class="info-item">
                        <h4>üìÖ Start Time</h4>
                        <p><%= new Date(auction.auctionStart).toLocaleString() %></p>
                    </div>
                    <div class="info-item">
                        <h4>‚è∞ End Time</h4>
                        <p><%= new Date(auction.auctionEnd).toLocaleString() %></p>
                    </div>
                </div>
                
                <% if (auction.description) { %>
                    <div class="info-item">
                        <h4>üìù Description</h4>
                        <p><%= auction.description %></p>
                    </div>
                <% } %>
            </div>
            
            <div class="timer" id="auction-timer">
                <h3>‚è±Ô∏è Time Remaining</h3>
                <div id="time-remaining">Loading...</div>
            </div>
            
            <div class="bidding-section">
                <div class="current-bid">
                    <h3>üí∞ Current Lowest Bid</h3>
                    <% if (auction.currentLowestBid) { %>
                        <div class="bid-amount">‚Çπ<%= auction.currentLowestBid %></div>
                        <div class="bidder-info">
                            <strong>Lowest Bidder:</strong> <%= auction.currentLowestBidder %><br>
                            <small>Total Bids: <%= auction.bidders ? auction.bidders.length : 0 %></small>
                        </div>
                    <% } else { %>
                        <div class="bid-amount">‚Çπ<%= auction.basePrice %></div>
                        <div class="bidder-info">
                            <strong>No bids yet</strong><br>
                            <small>Waiting for suppliers to bid</small>
                        </div>
                    <% } %>
                </div>
                
                <div class="bidders-list">
                    <h3>üìä All Bids</h3>
                    <div id="bidders-container">
                        <% if (auction.bidders && auction.bidders.length > 0) { %>
                            <% auction.bidders.sort((a, b) => a.bidAmount - b.bidAmount).forEach(function(bidder) { %>
                                <div class="bidder-item">
                                    <div class="bidder-details">
                                        <div class="bidder-name"><%= bidder.supplierName %></div>
                                        <div class="bidder-contact">
                                            üìû <%= bidder.supplierPhone %> | üìß <%= bidder.supplierEmail %><br>
                                            üìç <%= bidder.supplierCity %>
                                        </div>
                                    </div>
                                    <div class="bid-amount-display">
                                        <div class="bid-amount-value">‚Çπ<%= bidder.bidAmount %></div>
                                        <div class="bid-time"><%= new Date(bidder.bidTime).toLocaleTimeString() %></div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="no-bids">
                                <p>No bids yet</p>
                                <small>Suppliers will appear here when they place bids</small>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <% if (auction.winner && auction.status === 'ended') { %>
                <div class="winner-section">
                    <h3>üèÜ Auction Winner</h3>
                    <div class="winner-details">
                        <p><strong>Supplier:</strong> <%= auction.winner.supplierName %></p>
                        <p><strong>Winning Bid:</strong> ‚Çπ<%= auction.winner.winningBid %></p>
                        <p><strong>Phone:</strong> <%= auction.winner.supplierPhone %></p>
                        <p><strong>Email:</strong> <%= auction.winner.supplierEmail %></p>
                        <p><strong>Address:</strong> <%= auction.winner.supplierAddress %></p>
                    </div>
                    <!-- <div class="winner-contact-buttons">
                        <a href="tel:<%= auction.winner.supplierPhone %>" class="contact-btn btn-call">üìû Call</a>
                        <a href="mailto:<%= auction.winner.supplierEmail %>" class="contact-btn btn-email">üìß Email</a>
                        <a href="https://wa.me/<%= auction.winner.supplierPhone %>" target="_blank" class="contact-btn btn-whatsapp">üí¨ WhatsApp</a>
                    </div> -->
                </div>
            <% } %>
        </div>
    </div>
    
    <!-- Socket.IO Client -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const auctionId = '<%= auction._id %>';
        const auctionEndTime = new Date('<%= auction.auctionEnd %>');
        
        // Join the auction room
        socket.emit('joinVendorAuction', auctionId);
        
        // Update timer
        function updateTimer() {
            const now = new Date();
            const timeLeft = auctionEndTime - now;
            
            if (timeLeft <= 0) {
                document.getElementById('time-remaining').textContent = 'Auction Ended';
                showSuccess('Auction has ended!');
                return;
            }
            
            const hours = Math.floor(timeLeft / (1000 * 60 * 60));
            const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);
            
            document.getElementById('time-remaining').textContent = 
                `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }
        
        // Update timer every second
        setInterval(updateTimer, 1000);
        updateTimer();
        
        // Listen for new bids
        socket.on('vendorAuctionBid', (data) => {
            if (data.auctionId === auctionId) {
                // Update current lowest bid display
                const currentBidElement = document.querySelector('.bid-amount');
                if (currentBidElement) {
                    currentBidElement.textContent = '‚Çπ' + data.currentLowestBid;
                }
                
                // Update bidder info
                const bidderInfo = document.querySelector('.bidder-info');
                if (bidderInfo) {
                    bidderInfo.innerHTML = `
                        <strong>Lowest Bidder:</strong> ${data.supplierName}<br>
                        <small>Total Bids: ${data.totalBids || 0}</small>
                    `;
                }
                
                // Add visual effect
                currentBidElement.style.color = '#e74c3c';
                currentBidElement.style.transform = 'scale(1.1)';
                setTimeout(() => {
                    currentBidElement.style.color = '';
                    currentBidElement.style.transform = '';
                }, 1000);
                
                // Add to bidders list
                addBidderToList(data.supplierName, data.bidAmount, data.supplierPhone, data.supplierEmail, data.supplierCity);
                
                showSuccess(`New bid received: ‚Çπ${data.bidAmount} from ${data.supplierName}`);
            }
        });
        
        // Listen for auction ended
        socket.on('vendorAuctionEnded', (data) => {
            if (data.auctionId === auctionId) {
                document.getElementById('time-remaining').textContent = 'Auction Ended';
                showSuccess('Auction has ended!');
                
                // Reload page to show winner
                setTimeout(() => {
                    location.reload();
                }, 2000);
            }
        });
        
        function addBidderToList(supplierName, bidAmount, supplierPhone, supplierEmail, supplierCity) {
            const container = document.getElementById('bidders-container');
            
            // Remove "no bids" message if exists
            const noBidsElement = container.querySelector('.no-bids');
            if (noBidsElement) {
                noBidsElement.remove();
            }
            
            const bidderItem = document.createElement('div');
            bidderItem.className = 'bidder-item';
            bidderItem.innerHTML = `
                <div class="bidder-details">
                    <div class="bidder-name">${supplierName}</div>
                    <div class="bidder-contact">
                        üìû ${supplierPhone} | üìß ${supplierEmail}<br>
                        üìç ${supplierCity}
                    </div>
                </div>
                <div class="bid-amount-display">
                    <div class="bid-amount-value">‚Çπ${bidAmount}</div>
                    <div class="bid-time">${new Date().toLocaleTimeString()}</div>
                </div>
            `;
            
            container.appendChild(bidderItem);
            
            // Sort bidders by bid amount (lowest first)
            const bidderItems = Array.from(container.querySelectorAll('.bidder-item'));
            bidderItems.sort((a, b) => {
                const aAmount = parseFloat(a.querySelector('.bid-amount-value').textContent.replace('‚Çπ', ''));
                const bAmount = parseFloat(b.querySelector('.bid-amount-value').textContent.replace('‚Çπ', ''));
                return aAmount - bAmount;
            });
            
            // Re-append sorted items
            bidderItems.forEach(item => container.appendChild(item));
        }
        
        function showError(message) {
            const errorDiv = document.getElementById('error-message');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            setTimeout(() => {
                errorDiv.style.display = 'none';
            }, 5000);
        }
        
        function showSuccess(message) {
            const successDiv = document.getElementById('success-message');
            successDiv.textContent = message;
            successDiv.style.display = 'block';
            setTimeout(() => {
                successDiv.style.display = 'none';
            }, 3000);
        }
    </script>
</body>
</html> 