<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Live Auction - <%= auction.name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: #f7f9fa;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1000px;
            margin: 20px auto;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.07);
            overflow: hidden;
        }
        .header {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            color: white;
            padding: 20px;
            text-align: center;
        }
        .header h1 {
            margin: 0;
            font-size: 2rem;
        }
        .live-indicator {
            display: inline-block;
            background: #fff;
            color: #e74c3c;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
            margin-top: 10px;
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.7; }
            100% { opacity: 1; }
        }
        .content {
            padding: 30px;
        }
        .auction-info {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }
        .product-details {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
        }
        .product-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 15px;
        }
        .bid-section {
            background: #fff;
            border: 2px solid #e74c3c;
            border-radius: 8px;
            padding: 20px;
        }
        .current-bid {
            text-align: center;
            margin-bottom: 20px;
        }
        .current-bid h2 {
            color: #e74c3c;
            font-size: 2.5rem;
            margin: 0;
        }
        .current-bidder {
            color: #666;
            font-size: 1.1rem;
        }
        .bid-form {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }
        .bid-form input {
            flex: 1;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 6px;
            font-size: 1.1rem;
        }
        .bid-form button {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 6px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.2s;
        }
        .bid-form button:hover {
            background: #c0392b;
        }
        .bid-form button:disabled {
            background: #ccc;
            cursor: not-allowed;
        }
        .timer {
            text-align: center;
            font-size: 1.5rem;
            color: #e74c3c;
            font-weight: bold;
            margin: 20px 0;
        }
        .bidders-list {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
        }
        .bidders-list h3 {
            margin-top: 0;
            color: #333;
        }
        .bidder-item {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #eee;
        }
        .bidder-item:last-child {
            border-bottom: none;
        }
        .error-message {
            background: #f8d7da;
            color: #721c24;
            padding: 10px;
            border-radius: 4px;
            margin: 10px 0;
            display: none;
        }
        .success-message {
            background: #d4edda;
            color: #155724;
            padding: 10px;
            border-radius: 4px;
            margin: 10px 0;
            display: none;
        }
        @media (max-width: 768px) {
            .auction-info {
                grid-template-columns: 1fr;
            }
            .bid-form {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><%= auction.name %></h1>
            <div class="live-indicator">ðŸ”´ LIVE AUCTION</div>
        </div>
        
        <div class="content">
            <div class="auction-info">
                <div class="product-details">
                    <h3>Product Details</h3>
                    <% if (auction.image) { %>
                        <img class="product-image" src="<%= auction.image %>" alt="<%= auction.name %>">
                    <% } else { %>
                        <div class="product-image" style="background: #eee; display: flex; align-items: center; justify-content: center; color: #999;">No Image</div>
                    <% } %>
                    <p><strong>Base Price:</strong> â‚¹<%= auction.basePrice %></p>
                    <p><strong>Quantity:</strong> <%= auction.quantity %></p>
                    <p><strong>Location:</strong> <%= auction.area %>, <%= auction.city %>, <%= auction.state %></p>
                    <p><strong>Supplier:</strong> <%= auction.supplierName %></p>
                </div>
                
                <div class="bid-section">
                    <div class="current-bid">
                        <h2 id="current-bid-display">â‚¹<%= auction.currentBid || auction.basePrice %></h2>
                        <div class="current-bidder" id="current-bidder-display">
                            <% if (auction.currentBidder) { %>
                                Current Bidder: <%= auction.currentBidder %>
                            <% } else { %>
                                No bids yet
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="timer" id="auction-timer">
                        Time Remaining: <span id="time-remaining">Loading...</span>
                    </div>
                    
                    <div style="margin-bottom: 20px;">
                        <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; border-left: 4px solid #007bff; margin-bottom: 15px;">
                            <h4 style="margin: 0; color: #495057; font-size: 1.1rem;">Vendor: <span style="font-weight: 600; color: #007bff;"><%= vendor ? vendor.name : 'Unknown' %></span></h4>
                        </div>
                    </div>
                    
                    <form class="bid-form" id="bid-form">
                        <div style="margin-bottom: 15px;">
                            <input type="number" id="bid-amount" placeholder="Enter your bid amount" min="<%= (auction.currentBid || auction.basePrice) + 1 %>" step="1" required style="width: 100%; padding: 12px; border: 2px solid #ddd; border-radius: 8px; font-size: 1rem; margin-bottom: 12px;">
                            <button type="submit" id="bid-button" style="width: 100%; padding: 15px; background: #e74c3c; color: white; border: none; border-radius: 8px; font-size: 1.1rem; font-weight: 600; cursor: pointer; transition: background 0.2s;">Place Bid</button>
                        </div>
                    </form>
                    
                    <div class="error-message" id="error-message"></div>
                    <div class="success-message" id="success-message"></div>
                </div>
            </div>
            
            <div class="bidders-list">
                <h3>Recent Bidders</h3>
                <div id="bidders-container">
                    <% if (auction.bidders && auction.bidders.length > 0) { %>
                        <% auction.bidders.slice(-10).reverse().forEach(function(bidder) { %>
                            <div class="bidder-item" style="background: #f8f9fa; padding: 10px; border-radius: 6px; margin-bottom: 8px; border-left: 4px solid #28a745;">
                                <span style="font-weight: 600; color: #495057;"><%= bidder.vendorName %></span>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p style="color: #666; font-style: italic;">No bids yet</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Socket.IO Client -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const auctionId = '<%= auction._id %>';
        const auctionEndTime = new Date('<%= auction.auctionEnd %>');
        
        // Join the auction room
        socket.emit('joinAuction', auctionId);
        
        // Update timer
        function updateTimer() {
            const now = new Date();
            const timeLeft = auctionEndTime - now;
            
            if (timeLeft <= 0) {
                document.getElementById('time-remaining').textContent = 'Auction Ended';
                document.getElementById('bid-button').disabled = true;
                document.getElementById('bid-amount').disabled = true;
                return;
            }
            
            const hours = Math.floor(timeLeft / (1000 * 60 * 60));
            const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);
            
            document.getElementById('time-remaining').textContent = 
                `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }
        
        // Update timer every second
        setInterval(updateTimer, 1000);
        updateTimer();
        
        // Handle bid form submission
        document.getElementById('bid-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const bidAmount = parseInt(document.getElementById('bid-amount').value);
            const currentBid = parseInt(document.getElementById('current-bid-display').textContent.replace('â‚¹', ''));
            
            if (bidAmount <= currentBid) {
                showError('Your bid must be higher than the current bid');
                return;
            }
            
            try {
                const vendorName = '<%= vendor ? vendor.name : "Unknown" %>';
                
                const response = await fetch('/supplier/place-bid', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        auctionId: auctionId,
                        vendorId: '<%= vendor ? vendor.vendorId : "unknown" %>',
                        vendorName: vendorName,
                        vendorPhone: '<%= vendor ? vendor.phone : "" %>',
                        vendorEmail: '<%= vendor ? vendor.email : "" %>',
                        vendorAddress: '<%= vendor ? ([vendor.address, vendor.area, vendor.city, vendor.state].filter(Boolean).join(", ") || "") : "" %>',
                        bidAmount: bidAmount
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showSuccess('Bid placed successfully!');
                    document.getElementById('bid-amount').value = '';
                    document.getElementById('bid-amount').min = bidAmount + 1;
                } else {
                    showError(result.error || 'Failed to place bid');
                }
            } catch (error) {
                showError('Error placing bid: ' + error.message);
            }
        });
        
        // Listen for new bids from other users
        socket.on('newBid', (data) => {
            if (data.auctionId === auctionId) {
                document.getElementById('current-bid-display').textContent = 'â‚¹' + data.bidAmount;
                document.getElementById('current-bidder-display').textContent = 'Current Bidder: ' + data.vendorName;
                document.getElementById('bid-amount').min = data.bidAmount + 1;
                
                // Add visual effect
                const bidDisplay = document.getElementById('current-bid-display');
                bidDisplay.style.color = '#e74c3c';
                bidDisplay.style.transform = 'scale(1.1)';
                setTimeout(() => {
                    bidDisplay.style.color = '';
                    bidDisplay.style.transform = '';
                }, 1000);
                
                // Add to bidders list
                addBidderToList(data.vendorName, data.bidAmount);
            }
        });
        
        // Listen for auction ended
        socket.on('auctionEnded', (data) => {
            if (data.auctionId === auctionId) {
                document.getElementById('time-remaining').textContent = 'Auction Ended';
                document.getElementById('bid-button').disabled = true;
                document.getElementById('bid-amount').disabled = true;
                showSuccess('Auction has ended!');
            }
        });
        
        function showError(message) {
            const errorDiv = document.getElementById('error-message');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            setTimeout(() => {
                errorDiv.style.display = 'none';
            }, 5000);
        }
        
        function showSuccess(message) {
            const successDiv = document.getElementById('success-message');
            successDiv.textContent = message;
            successDiv.style.display = 'block';
            setTimeout(() => {
                successDiv.style.display = 'none';
            }, 3000);
        }
        
        function addBidderToList(vendorName, bidAmount) {
            const container = document.getElementById('bidders-container');
            const bidderItem = document.createElement('div');
            bidderItem.className = 'bidder-item';
            bidderItem.style = 'background: #f8f9fa; padding: 10px; border-radius: 6px; margin-bottom: 8px; border-left: 4px solid #28a745;';
            bidderItem.innerHTML = `
                <span style="font-weight: 600; color: #495057;">${vendorName}</span>
            `;
            container.appendChild(bidderItem);
            
            // Keep only last 10 bids
            const items = container.querySelectorAll('.bidder-item');
            if (items.length > 10) {
                items[0].remove();
            }
        }
    </script>
</body>
</html> 